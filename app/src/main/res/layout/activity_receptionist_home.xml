<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#536DFE"
    android:padding="40dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    tools:context=".ReceptionistHome">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:textSize="25dp"
        android:gravity="left"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewPatientHomeID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abdul_wahid"
        android:paddingLeft="40dp"
        android:textSize="30dp"
        android:gravity="left"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_btn_bg_patient_home"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Password"
            android:textColor="@color/patientHomeAltText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pHomepasswordID"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:fontFamily="@font/open_sans_regular"
            android:hint="******"
            android:paddingLeft="30dp"
            android:textColor="#3A3A3A"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_btn_bg_patient_home"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Full Name"
            android:textColor="@color/patientHomeAltText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pHomefullNameID"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:fontFamily="@font/open_sans_regular"
            android:hint="Abdul Wahid"
            android:paddingLeft="30dp"
            android:textColor="#3A3A3A"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_btn_bg_patient_home"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Email"
            android:textColor="@color/patientHomeAltText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pHomeemailID"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:fontFamily="@font/open_sans_regular"
            android:hint="abdul15-2992@diu.edu.bd"
            android:paddingLeft="25dp"
            android:inputType="textEmailAddress"
            android:textColor="#3A3A3A"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_btn_bg_patient_home"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Age"
            android:textColor="@color/patientHomeAltText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pHomeageID"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left"
            android:fontFamily="@font/open_sans_regular"
            android:hint="22"
            android:paddingLeft="25dp"
            android:inputType="number"
            android:textColor="#3A3A3A"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_btn_bg_patient_home"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Gender"
            android:textColor="@color/patientHomeAltText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/pHomegenderGroupID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <RadioButton
                android:id="@+id/pHomemaleRaidoID"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/pHomefemaleRaidoID"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/patientUpdateBtnID"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="#000702"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:onClick="updateBtn"
        android:background="@drawable/btn_bg"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/patientLogoutBtnID"
        android:layout_marginHorizontal="80dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:onClick="logoutBtn"
        android:background="@drawable/logout_btn_bg"
        android:layout_marginBottom="20dp"/>



</LinearLayout>